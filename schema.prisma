datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Result {
  id          String   @id @default(cuid())
  athleteName String
  event       String
  time        String
  place       Int
  team        String
  heat        Int?
  lane        Int?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Team {
  id        String   @id @default(cuid())
  name      String   @unique
  score     Int      @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
